                            </aCtrls:AncDataGrid.Columns>
                        </aCtrls:AncDataGrid>

                    </Border>
                </DockPanel>

                <Border DockPanel.Dock="Top" Visibility="{Binding Path=IsLoading, Converter={StaticResource cBoolToVisibility}, ConverterParameter=True}" Margin="0,70,0,0"
                        HorizontalAlignment="Center" VerticalAlignment="Top" Background="White" BorderBrush="LightGray" BorderThickness="1" SnapsToDevicePixels="True">
                    <StackPanel Orientation="Vertical" Margin="15,7,15,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{lan:Translate Section=Common, Key=Loading, UIDesignerValue='Loading...'}" FontWeight="Medium" FontSize="14" Margin="0,0,0,4" />
                        </StackPanel>
                        <ProgressBar IsIndeterminate="True" Height="10" />
                    </StackPanel>

                </Border>

                <GridSplitter Grid.Row="1" KeyboardNavigation.TabNavigation="None" Panel.ZIndex="1000" KeyboardNavigation.IsTabStop="False" Height="1" 
                              Margin="0,-3" BorderThickness="0,3" BorderBrush="Transparent" Background="Transparent"  SnapsToDevicePixels="True" ResizeDirection="Rows" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ></GridSplitter>

                <Border x:Name="bdGrid" Grid.Row="2"  DockPanel.Dock="Bottom"  >
                    <aCtrls:AncDataGrid x:Name="dataGridMessages" ItemsSource="{Binding Path=WarningAndErrorMessages}" 
                        CanUserAddRows="False" IsSynchronizedWithCurrentItem="False"
                        Width="{Binding Path=ActualWidth, ElementName=uc}" 
                        AutoGenerateColumns="False" RowHeaderWidth="0" 
                        Background="{StaticResource ResourceKey=GeneralBackground}"
                        SelectionMode="Extended" SelectionUnit="FullRow" KeyboardNavigation.TabIndex="1" CanUserSortColumns="True"
                        CanUserDeleteRows="False" CanUserResizeRows="False" HorizontalGridLinesBrush="LightGray"
                        VerticalGridLinesBrush="#E1E1E1" BorderBrush="LightGray" BorderThickness="0" DockPanel.Dock="Top" 
                        RowDetailsVisibilityMode="Collapsed" ClipboardCopyMode="None"
                        VirtualizingStackPanel.VirtualizationMode="Recycling" PreviewKeyDown="dataGridMessages_PreviewKeyDown"
                        Tag="{Binding Path=DataContext, ElementName=uc}"
                        ScrollViewer.CanContentScroll="True" 
                        ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        CellFooterVisibility="Visible"
                        ColumnHeaderStyle="{StaticResource ResourceKey=defaultColumnHeaderStyle}">
                        <aCtrls:AncDataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Style="{StaticResource defaultMenuItem}">
                                    <MenuItem.Icon>
                                        <Image Width="18" Height="18" Margin="3,1,3,1" VerticalAlignment="Center" Source="pack://application:,,,/Resources/Images/Common/Copy.ico" />
                                    </MenuItem.Icon>
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Kopier valgte rækker til udklipsholderen." />
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                            </ContextMenu>
                        </aCtrls:AncDataGrid.ContextMenu>
                        <aCtrls:AncDataGrid.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{StaticResource ResourceKey=OverColor2}"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="{StaticResource ResourceKey=OverColor2}"/>
                            <SolidColorBrush x:Key="disabledField" Color="#FFC8C8C8" />

                            <Style x:Key="lblDisplay" TargetType="{x:Type Label}" BasedOn="{StaticResource ResourceKey=ValidateElementRedBorder}">
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="Padding" Value="3,1,3,1" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="ToolTipService.ShowDuration" Value="60000" />
                                <Setter Property="TextBlock.FontSize" Value="12" />
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Label">
                                            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" RecognizesAccessKey="False"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <Trigger Property="Validation.HasError" Value="false">
                                        <Setter Property="ToolTip" Value="{Binding Path=Content, RelativeSource={RelativeSource Self}}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="{x:Type DataGridCell}" >
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type DataGridCell}">
                                            <Border x:Name="Border" Height="{TemplateBinding Height}" Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" Margin="0,3" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <Style x:Key="defaultHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Padding" Value="6,2,6,4" />
                                <Setter Property="BorderBrush" Value="Gray" />
                                <Setter Property="BorderThickness" Value="0,0,1,0" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="TextBlock.FontSize" Value="13" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True" >
                                        <Setter Property="Background" Value="#28E0E0E0" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True" >
                                        <Setter Property="Background" Value="#19E0E0E0" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <Style x:Key="defaultHeaderStyleNoBorder" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource defaultHeaderStyle}">
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Style>

                            <Style x:Key="centeredHeaderStyle" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource defaultHeaderStyle}">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="Background" Value="#FF414141" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderBrush" Value="#717171" />
                            </Style>

                            <Style x:Key="leftHeaderStyle" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource defaultHeaderStyle}">
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                <Setter Property="Background" Value="#FF414141" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderBrush" Value="#717171" />
                            </Style>

                        </aCtrls:AncDataGrid.Resources>
                        <aCtrls:AncDataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Tag" Value="{Binding Path=DataContext, ElementName=uc}" />
                            </Style>
                        </aCtrls:AncDataGrid.RowStyle>
                        <aCtrls:AncDataGrid.Columns>
                            <!-- warning icon-->
                            <aCtrls:AncDataGridTemplateColumn Width="Auto" Header="!" ClipboardContentBinding="{Binding Path=TypeString}" SortMemberPath="TypeString" CanUserResize="False" HeaderStyle="{StaticResource ResourceKey=centeredHeaderStyle}">
                                <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Image Width="14" VerticalAlignment="Center" Margin="4,1" HorizontalAlignment="Center">
                                                <Image.Style>
                                                    <Style TargetType="{x:Type Image}">
                                                        <Setter Property="Source" Value="pack://application:,,,/Resources/Images/DataGrid/Warning.ico" />
                                                        <Setter Property="ToolTip" Value="{lan:Translate Section=ImportFromCSVView, Key=Warning, UIDesignerValue='Warning'}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Path=TypeString}" Value="Error">
                                                                <Setter Property="Source" Value="pack://application:,,,/Resources/Images/DataGrid/Error.ico" />
                                                                <Setter Property="ToolTip" Value="{lan:Translate Section=ImportFromCSVView, Key=Error, UIDesignerValue='Error'}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Path=TypeString}" Value="Warning">
                                                                <Setter Property="Source" Value="pack://application:,,,/Resources/Images/DataGrid/Warning.ico" />
                                                                <Setter Property="ToolTip" Value="{lan:Translate Section=ImportFromCSVView, Key=Warning, UIDesignerValue='Warning'}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Path=TypeString}" Value="Duplicate">
                                                                <Setter Property="Source" Value="pack://application:,,,/Resources/Images/DataGrid/Duplicate.ico" />
                                                                <Setter Property="ToolTip" Value="{lan:Translate Section=ImportFromCSVView, Key=Duplicate, UIDesignerValue='Duplicate'}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </Grid>
                                    </DataTemplate>
                                </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                            </aCtrls:AncDataGridTemplateColumn>

                            <!-- line-->
                            <aCtrls:AncDataGridTemplateColumn Width="Auto" ClipboardContentBinding="{Binding Path=SampleItem.CSVRowNumber}" Header="{lan:Translate Section=ImportFromCSVView, Key=RowNumber, UIDesignerValue='Row number'}" SortMemberPath="SampleItem.CSVRowNumber" HeaderStyle="{StaticResource ResourceKey=leftHeaderStyle}">
                                <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=SampleItem.CSVRowNumber}" Foreground="Black" Style="{StaticResource tvGridCellItem}" />
                                    </DataTemplate>
                                </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                            </aCtrls:AncDataGridTemplateColumn>

                            <!-- animal id-->
                            <aCtrls:AncDataGridTemplateColumn Width="auto" ClipboardContentBinding="{Binding Path=SampleItem.Sample.animalId}" Header="{lan:Translate Section=ImportFromCSVView, Key=Id, UIDesignerValue='Sample Id'}" SortMemberPath="SampleItem.Sample.animalId" HeaderStyle="{StaticResource ResourceKey=leftHeaderStyle}">
                                <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=SampleItem.Sample.animalId}" Foreground="Black" Style="{StaticResource tvGridCellItem}" />
                                    </DataTemplate>
                                </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                            </aCtrls:AncDataGridTemplateColumn>

                            <!-- Description -->
                            <aCtrls:AncDataGridTemplateColumn Width="*" ClipboardContentBinding="{Binding Path=Message}" >
                                <aCtrls:AncDataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Background" Value="#FF414141"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="TextBlock.FontSize" Value="13" />
                                    </Style>
                                </aCtrls:AncDataGridTemplateColumn.HeaderStyle>
                                <aCtrls:AncDataGridTemplateColumn.Header >
                                    <Grid Margin="5,0,3,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,-1,0,0"  Text="{lan:Translate Section=ImportFromCSVView, Key=Description, UIDesignerValue='Description'}" />

                                        <!-- Command="{Binding Path=Data.ResetMessageCommand, Source={StaticResource proxyContext}}" --> 
                                        <Button Grid.Column="1" x:Name="btnCopyToClipboard" 
                                                Margin="3,3,0,3"  Height="23" Style="{StaticResource panelButton}" BorderBrush="#8A8A8A" BorderThickness="1"
                                                VerticalContentAlignment="Center" HorizontalAlignment="Right" Click="btnCopyToClipboard_Click" >
                                            <DockPanel>
                                                <Image Width="14" DockPanel.Dock="Left" Source="pack://application:,,,/Resources/Images/Common/CopyToClipboard.ico" VerticalAlignment="Center" Margin="6,0,6,0" HorizontalAlignment="Center">
                                                </Image>
                                                <TextBlock Text="{lan:Translate Section=ImportFromCSVView, Key=CopyToClipboardButton,UIDesignerValue='Copy all messages to clipboard'}"
                                                       Foreground="White" Margin="0,2,8,0" FontSize="11" />
                                            </DockPanel>
                                          
                                        </Button>
                                    </Grid>
                                </aCtrls:AncDataGridTemplateColumn.Header>
                                <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Message}" Foreground="Black" Style="{StaticResource tvGridCellItem}" />
                                    </DataTemplate>
                                </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                            </aCtrls:AncDataGridTemplateColumn>

                        </aCtrls:AncDataGrid.Columns>

                    </aCtrls:AncDataGrid>

                    <!-- Show hide grid 
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Path=HasWarningAndErrorMessages}" Value="True" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible" />
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
-->
                </Border>

                <Border Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border.Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=IsLoading}" Value="False" />
                                        <Condition Binding="{Binding Path=HasWarningAndErrorMessages}" Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{lan:Translate Section=ImportFromCSVView, Key=NoErrorsFound, UIDesignerValue='No errors, warnings, or duplicates found.'}" Margin="0,25,0,0" Foreground="#565656" />
                </Border>
            </Grid>
           
        </DockPanel>
    </Border>
</UserControl>
