                                                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="White"/>
                                                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                                                        <SolidColorBrush x:Key="disabledField" Color="#FFF0F0F0" />

                                                        <Style x:Key="lblDisplay" TargetType="{x:Type Label}" BasedOn="{StaticResource ResourceKey=ValidateElementRedBorder}">
                                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                                            <Setter Property="Padding" Value="2,0,2,0" />
                                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                                            <Setter Property="ToolTipService.ShowDuration" Value="60000" />

                                                            <Style.Triggers>
                                                                <Trigger Property="Validation.HasError" Value="False">
                                                                    <Setter Property="ToolTip" Value="{Binding Path=Content, RelativeSource={RelativeSource Self}}" />
                                                                </Trigger>

                                                            </Style.Triggers>
                                                        </Style>

                                                        <Style x:Key="StandardCellStyle" TargetType="{x:Type DataGridCell}" >
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                                        <Border x:Name="Border" Height="{TemplateBinding Height}" Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="BorderBrush" Value="LightGray"/>
                                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                            <Setter Property="Padding" Value="0,0,0,0"/>
                                                            <Setter Property="Margin" Value="0,0,0,0"/>
                                                        </Style>

                                                        <Style x:Key="NoTabStopCellStyle" TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource StandardCellStyle}" >
                                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                                            <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
                                                        </Style>

                                                        <Style x:Key="DisabledCellStyle" TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource StandardCellStyle}" >
                                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                                            <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
                                                            <Setter Property="Background" Value="#7FE6E6E6" />
                                                            <Setter Property="BorderBrush" Value="#99E6E6E6" />
                                                        </Style>

                                                        <Style x:Key="tCellStyle" TargetType="{x:Type TextBlock}"  >
                                                            <Setter Property="Margin" Value="8,0,4,0" />
                                                            <Setter Property="HorizontalAlignment" Value="Left" />
                                                        </Style>
                                                    </aCtrls:AncDataGrid.Resources>
                                                    <aCtrls:AncDataGrid.RowStyle>
                                                        <Style TargetType="{x:Type DataGridRow}">
                                                            <Setter Property="FontSize" Value="13" />
                                                            <Setter Property="MinHeight" Value="30" />
                                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                            <Setter Property="Tag" Value="{Binding Path=DataContext, ElementName=uc}" />
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background">
                                                                        <Setter.Value>
                                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                                <GradientStop Color="#FFFCF4" Offset="0.0"/>
                                                                                <GradientStop Color="#FFFCFAE7" Offset="1.0"/>
                                                                            </LinearGradientBrush>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </aCtrls:AncDataGrid.RowStyle>
                                                    <aCtrls:AncDataGrid.Columns>
                                                        <!-- Delete button -->
                                                        <aCtrls:AncDataGridTemplateColumn  CellStyle="{StaticResource NoTabStopCellStyle}" HeaderTemplate="{StaticResource ResourceKey=GridColumnHeaderDefault}" Width="28">
                                                            <aCtrls:AncDataGridTemplateColumn.Header>
                                                                <dGrid:DoubleColumnHeader UpperHeader="" LowerHeaderHorizontalAlignment="Left" />
                                                            </aCtrls:AncDataGridTemplateColumn.Header>
                                                            <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Button Command="{Binding Path=DataContext.RemoveUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding .}" SnapsToDevicePixels="True"
                                                                    Style="{StaticResource imageButtonStyle2}" BorderBrush="#E3E3E3" ToolTip="{lan:Translate Section=Common, Key=Remove, UIDesignerValue='Remove'}" Margin="1">
                                                                        <Button.Content>
                                                                            <Image Opacity="0.9" Margin="0" Height="15" VerticalAlignment="Center" HorizontalAlignment="Center" Source="pack://application:,,,/Resources/Images/Common/Remove.ico" ></Image>
                                                                        </Button.Content>
                                                                    </Button>
                                                                </DataTemplate>
                                                            </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                        </aCtrls:AncDataGridTemplateColumn>
                                                        <!-- CheckBox -->
                                                        <aCtrls:AncDataGridTemplateColumn  CellStyle="{StaticResource StandardCellStyle}"  HeaderTemplate="{StaticResource ResourceKey=GridColumnHeaderCheckBox}" Width="65" MinWidth="65" >
                                                            <aCtrls:AncDataGridTemplateColumn.Header>
                                                                <dGrid:DoubleColumnHeader LowerHeader="{lan:Translate Section=Common, Key=Primary, UIDesignerValue='Primary'}" LowerHeaderHorizontalAlignment="Center"  />
                                                            </aCtrls:AncDataGridTemplateColumn.Header>
                                                            <aCtrls:AncDataGridTemplateColumn.CellTemplate >
                                                                <DataTemplate>
                                                                    <CheckBox IsChecked="{Binding Path=primaryReader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MouseDown="CheckBox_MouseDown" PreviewMouseDown="CheckBox_PreviewMouseDown" IsThreeState="false" Margin="0,0,0,-1"  VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource sCheckBoxDataGrid}" ></CheckBox>
                                                                </DataTemplate>
                                                            </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                        </aCtrls:AncDataGridTemplateColumn>

                                                        <!-- Readers name-->
                                                        <aCtrls:AncDataGridTemplateColumn  CellStyle="{StaticResource StandardCellStyle}"  HeaderTemplate="{StaticResource ResourceKey=GridColumnHeaderDefault}"  Width="65" MinWidth="65" >
                                                            <aCtrls:AncDataGridTemplateColumn.Header>
                                                                <dGrid:DoubleColumnHeader UpperHeader="" LowerHeaderHorizontalAlignment="Left" LowerHeader="{lan:Translate Section=Common, Key=User, UIDesignerValue='User'}" LowerHeaderToolTip="{lan:Translate Section=Common, Key=User, UIDesignerValue='User'}" />
                                                            </aCtrls:AncDataGridTemplateColumn.Header>
                                                            <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=SDReader.DFUPerson.initials}" ToolTip="{Binding Path=SDReader.DFUPerson.UIDisplay}" LineStackingStrategy="BlockLineHeight" 
                                                                               VerticalAlignment="Center" Style="{StaticResource tCellStyle}"></TextBlock>
                                                                </DataTemplate>
                                                            </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                        </aCtrls:AncDataGridTemplateColumn>

                                                        <!-- Species -->
                                                        <aCtrls:AncDataGridTemplateColumn  CellStyle="{StaticResource StandardCellStyle}"  HeaderTemplate="{StaticResource ResourceKey=GridColumnHeaderDefault}" Width="65" MinWidth="65">
                                                            <aCtrls:AncDataGridTemplateColumn.Header>
                                                                <dGrid:DoubleColumnHeader UpperHeader="" LowerHeaderHorizontalAlignment="Left" LowerHeader="{lan:Translate Section=AddEditSDEventView, Key=Species,UIDesignerValue='Species'}" LowerHeaderToolTip="{lan:Translate Section=AddEditSDEventView, Key=Species,UIDesignerValue='Species'}" />
                                                            </aCtrls:AncDataGridTemplateColumn.Header>
                                                            <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=SDReader.speciesCode}" ToolTip="{Binding Path=SDReader.speciesCode}" LineStackingStrategy="BlockLineHeight" VerticalAlignment="Center"  Style="{StaticResource tCellStyle}"></TextBlock>
                                                                </DataTemplate>
                                                            </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                        </aCtrls:AncDataGridTemplateColumn>

                                                        <!-- Stock -->
                                                        <aCtrls:AncDataGridTemplateColumn CellStyle="{StaticResource StandardCellStyle}"  HeaderTemplate="{StaticResource ResourceKey=GridColumnHeaderDefault}" Width="85" MinWidth="85">
                                                            <aCtrls:AncDataGridTemplateColumn.Header>
                                                                <dGrid:DoubleColumnHeader UpperHeader="" LowerHeaderHorizontalAlignment="Left" LowerHeader="{lan:Translate Section=SDSampleView, Key=Stock,UIDesignerValue='Stock'}" LowerHeaderToolTip="{lan:Translate Section=SDSampleView, Key=Stock,UIDesignerValue='Stock'}" />
                                                            </aCtrls:AncDataGridTemplateColumn.Header>
                                                            <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=SDReader.L_Stock.stockCode}" ToolTip="{Binding Path=SDReader.L_Stock.UIDisplay}" LineStackingStrategy="BlockLineHeight" VerticalAlignment="Center" Style="{StaticResource tCellStyle}"></TextBlock>
                                                                </DataTemplate>
                                                            </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                        </aCtrls:AncDataGridTemplateColumn>

                                                        <!-- Experience -->
                                                        <aCtrls:AncDataGridTemplateColumn  CellStyle="{StaticResource StandardCellStyle}"  HeaderTemplate="{StaticResource ResourceKey=GridColumnHeaderDefault}" Width="85" MinWidth="85" >
                                                            <aCtrls:AncDataGridTemplateColumn.Header>
                                                                <dGrid:DoubleColumnHeader UpperHeader="" LowerHeaderHorizontalAlignment="Left" LowerHeader="{lan:Translate Section=SelectSDReadersView, Key=Experience,UIDesignerValue='Experience'}" LowerHeaderToolTip="{lan:Translate Section=SelectSDReadersView, Key=Experience,UIDesignerValue='Experience'}" />
                                                            </aCtrls:AncDataGridTemplateColumn.Header>
                                                            <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=SDReader.L_SDReaderExperience.description}" ToolTip="{Binding Path=SDReader.L_SDReaderExperience.UIDisplay}" LineStackingStrategy="BlockLineHeight" VerticalAlignment="Center" Style="{StaticResource tCellStyle}"></TextBlock>
                                                                </DataTemplate>
                                                            </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                        </aCtrls:AncDataGridTemplateColumn>

                                                        <!-- Preparation method -->
                                                        <aCtrls:AncDataGridTemplateColumn  CellStyle="{StaticResource StandardCellStyle}" CanUserResize="False"   HeaderTemplate="{StaticResource ResourceKey=GridColumnHeaderDefault}" Width="88" MinWidth="88" >
                                                            <aCtrls:AncDataGridTemplateColumn.Header>
                                                                <dGrid:DoubleColumnHeader UpperHeader="" LowerHeaderHorizontalAlignment="Left" LowerHeader="{lan:Translate Section=SDSampleView, Key=PreparationMethodShort,UIDesignerValue='Prep. method'}" LowerHeaderToolTip="{lan:Translate Section=SDSampleView, Key=PreparationMethod,UIDesignerValue='Preparation method'}" />
                                                            </aCtrls:AncDataGridTemplateColumn.Header>
                                                            <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock Text="{Binding Path=SDReader.L_SDPreparationMethod.preparationMethod}" ToolTip="{Binding Path=SDReader.L_SDPreparationMethod.UIDisplay}" LineStackingStrategy="BlockLineHeight" VerticalAlignment="Center" Style="{StaticResource tCellStyle}"></TextBlock>
                                                                </DataTemplate>
                                                            </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                        </aCtrls:AncDataGridTemplateColumn>

                                                    </aCtrls:AncDataGrid.Columns>
                                                </aCtrls:AncDataGrid>
                                            </Border>

                                        </DockPanel>
                                    </Grid>

                                </DockPanel>
                            </DockPanel>
                        </Border>

                        <!-- Assigned image directories -->
                        <Border DockPanel.Dock="Top" BorderThickness="1" SnapsToDevicePixels="True">
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="Margin" Value="0,0,-15,0" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=HasDefaultImageFolders}" Value="True">
                                            <Setter Property="BorderBrush" Value="#E6E6E6" />
                                            <Setter Property="Margin" Value="0,5,-15,0" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <DockPanel DockPanel.Dock="Top" Margin="0,10,0,10">
                                <StackPanel Orientation="Vertical">
                                    <DockPanel Margin="0">
                                        <Label Content="{lan:Translate Section=AddEditSDEventView, Key=ImageLocationHeader,UIDesignerValue='Image location folders'}" DockPanel.Dock="Left" VerticalAlignment="Top" Style="{StaticResource ResourceKey=sViewHeaderStyle}" />

                                        <Grid Margin="0,0,0,-0" HorizontalAlignment="Left">

                                            <Button VerticalAlignment="Center" Margin="0,0,0,-1"
                                                Command="{Binding Path=AddImageFoldersCommand}"
                                                Template="{StaticResource ResourceKey=imageButton3}" Style="{StaticResource ResourceKey=dropDownButton}"
                                                KeyboardNavigation.IsTabStop="False" >
                                                <Button.Width>
                                                    <sys:Double>NaN</sys:Double>
                                                </Button.Width>
                                                <DockPanel Margin="0,0">
                                                    <Image Source="pack://application:,,,/Resources/Images/Common/Add.ico" Margin="8,0,8,-1" VerticalAlignment="Center" Height="14" DockPanel.Dock="Left" />

                                                    <TextBlock Text="{lan:Translate Section=AddEditSDEventView, Key=AddImageFolder,UIDesignerValue='Add image folder'}" FontSize="13" VerticalAlignment="Center" Margin="1,1,11,1"  />
                                                </DockPanel>
                                            </Button>
                                        </Grid>

                                    </DockPanel>

                                    <Border Visibility="{Binding Path=HasDefaultImageFolders, Converter={StaticResource cBoolToVisibility}, ConverterParameter=True}">
                                        <Border BorderThickness="1,1,0,0" Margin="15,15,15,0"  BorderBrush="LightGray" SnapsToDevicePixels="True" KeyboardNavigation.TabIndex="2" KeyboardNavigation.TabNavigation="Local">
                                            <aCtrls:AncDataGrid ItemsSource="{Binding Path=DefaultImageFolders}"
                                                                    Style="{StaticResource defaultDataGridLightStyle}"
                                                                    CanUserAddRows="False" IsSynchronizedWithCurrentItem="False" Background="White"
                                                                    AutoGenerateColumns="False" RowHeaderWidth="0"
                                                                    SelectionMode="Extended" KeyboardNavigation.TabIndex="1" CanUserSortColumns="True" FooterVisibility="Collapsed"
                                                                    CanUserDeleteRows="False" CanUserResizeRows="False" HorizontalGridLinesBrush="Transparent"
                                                                    HorizontalAlignment="Stretch"
                                                                    VerticalGridLinesBrush="LightGray" BorderBrush="LightGray" BorderThickness="0" DockPanel.Dock="Top" RowDetailsVisibilityMode="Collapsed"
                                                                    VirtualizingStackPanel.VirtualizationMode="Recycling" 
                                                                    Tag="{Binding Path=DataContext, ElementName=uc}"
                                                                    CellFooterVisibility="Collapsed" 
                                                                    CellFooterBorderStyle="{StaticResource cellBorderStyle}"
                                                                    ColumnHeaderStyle="{StaticResource ResourceKey=defaultColumnLightHeaderStyle}" >

                                                <aCtrls:AncDataGrid.Resources>
                                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="White" Opacity="0.6"/>
                                                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="White"/>
                                                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                                                    <SolidColorBrush x:Key="disabledField" Color="#FFF0F0F0" />

                                                    <Style x:Key="StandardCellStyle" TargetType="{x:Type DataGridCell}" >
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                                    <Border x:Name="Border" Height="{TemplateBinding Height}" Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="BorderBrush" Value="LightGray"/>
                                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                        <Setter Property="Padding" Value="0,0,0,0"/>
                                                        <Setter Property="Margin" Value="0,0,0,0"/>
                                                    </Style>
                                                </aCtrls:AncDataGrid.Resources>
                                                <aCtrls:AncDataGrid.RowStyle>
                                                    <Style TargetType="{x:Type DataGridRow}">
                                                        <Setter Property="FontSize" Value="13" />
                                                        <Setter Property="MinHeight" Value="30" />
                                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                                        <Setter Property="Tag" Value="{Binding Path=DataContext, ElementName=uc}" />
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                            <GradientStop Color="#FFFCF4" Offset="0.0"/>
                                                                            <GradientStop Color="#FFFCFAE7" Offset="1.0"/>
                                                                        </LinearGradientBrush>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </aCtrls:AncDataGrid.RowStyle>
                                                <aCtrls:AncDataGrid.Columns>
                                                    <!-- Readers name-->
                                                    <aCtrls:AncDataGridTemplateColumn  CellStyle="{StaticResource StandardCellStyle}" CanUserResize="False"  HeaderTemplate="{StaticResource ResourceKey=GridColumnHeaderDefault}"  Width="481" >
                                                        <aCtrls:AncDataGridTemplateColumn.Header>
                                                            <dGrid:DoubleColumnHeader UpperHeader="" LowerHeaderHorizontalAlignment="Left" LowerHeader="{lan:Translate Section=AddEditSDEventView, Key=SelectedImageFoldersHeader,UIDesignerValue='Selected image folders'}" LowerHeaderToolTip="{lan:Translate Section=Common, Key=User, UIDesignerValue='User'}" />
                                                        </aCtrls:AncDataGridTemplateColumn.Header>
                                                        <aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>


                                                                <TextBlock Text="{Binding StringFormat='\\{0}'}" ToolTip="{Binding StringFormat='\\{0}'}" ToolTipService.ShowDuration="30000" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" Margin="8,0,4,0"></TextBlock>
                                                          
                                                                
                                                            </DataTemplate>
                                                        </aCtrls:AncDataGridTemplateColumn.CellTemplate>
                                                    </aCtrls:AncDataGridTemplateColumn>
                                                </aCtrls:AncDataGrid.Columns>
                                            </aCtrls:AncDataGrid>
                                        </Border>
                                    </Border>
                                </StackPanel>
                            </DockPanel>

                        </Border>

                        <StackPanel />
                    </DockPanel>
                </ScrollViewer>

                <!-- Loading message - shown in front of everything else -->
                <Border Visibility="{Binding Path=IsLoading, Converter={StaticResource cBoolToVisibility}, ConverterParameter=True, FallbackValue=Collapsed}"
                        BorderBrush="LightGray" BorderThickness="1" SnapsToDevicePixels="True" Background="White"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="10,5,10,8">
                        <TextBlock Text="{lan:Translate Section=Warning, Key=5, UIDesignerValue='Arbejder, vent venligst...'}" />
                        <ProgressBar IsIndeterminate="True" Height="10" Margin="0,2,0,0" />
                    </StackPanel>
                </Border>
            </Grid>
       

        </DockPanel>
    </Border>
    
</UserControl>
