<UserControl x:Class="Babelfisk.WPF.Views.SmartDots.AddEditSDEventView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:aCtrls="clr-namespace:Anchor.Core.Controls;assembly=Anchor.Core.Controls"
             xmlns:lan="urn:anchorcore-language-localization-ui"
             xmlns:cnv="clr-namespace:Babelfisk.WPF.Converters"
             xmlns:dGrid="clr-namespace:Babelfisk.WPF.Infrastructure.DataGrid"
             xmlns:local="clr-namespace:Babelfisk.WPF.Views.SmartDots"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" x:Name="uc"
             d:DesignHeight="1050" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/GeneralStyles.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/InputStyles.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/GreenRedCheckBoxStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/DataGridStyles.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/HeaderButtons.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Anchor.Core.Controls;component/Themes/FlatStyleComboBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Anchor.Core.Controls;component/Themes/DropDownListBox.xaml" />

                <ResourceDictionary>
                    <cnv:MarginConverter x:Key="cMargin" />

                    <Style x:Key="cellBorderStyle" TargetType="{x:Type Border}">
                        <Setter Property="BorderBrush" Value="{StaticResource GridBorderBrush}" />
                        <Setter Property="BorderThickness" Value="1,1,1,1" />
                        <Setter Property="MaxHeight" Value="32" />
                        <Setter Property="MinHeight" Value="21" />
                        <Setter Property="Background" Value="White" />
                    </Style>

                    <Style x:Key="sViewHeaderStyle" TargetType="{x:Type Label}" BasedOn="{StaticResource ResourceKey=txtHeader}">
                        <Setter Property="Width" Value="190" />
                    </Style>

                    <Style x:Key="sViewHeaderTBStyle" TargetType="{x:Type TextBlock}" >
                        <Setter Property="Width" Value="190" />
                        <Setter Property="Opacity" Value="1.0" />
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="Margin" Value="18,0,5,0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.3" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="sViewComboboxStyle" TargetType="{x:Type ComboBox}" BasedOn="{StaticResource ResourceKey=baseInputBoxStyle}">
                        <Setter Property="Width" Value="250" />
                    </Style>

                    <Style x:Key="sViewTextBoxStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource ResourceKey=txtStandard}">
                        <Setter Property="Width" Value="250" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="BorderBrush" Value="#E9E9E9" />
                    </Style>

                    <Style x:Key="sViewDateStyle" TargetType="{x:Type aCtrls:DateTimePickerControl }" BasedOn="{StaticResource ResourceKey=baseInputBoxStyle}">
                        <Setter Property="Width" Value="150" />
                        <Setter Property="BorderBrush" Value="#E9E9E9" />
                    </Style>

                    <DataTemplate x:Key="GridColumnHeaderDefault" >
                        <Border BorderBrush="LightGray" Background="WhiteSmoke"
                                Height="22" SnapsToDevicePixels="True"
                                Margin="0,0,0,0"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}"
                                BorderThickness="{Binding Path=HeaderBorder}" DataContext="{Binding Path=Content, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader, Mode=FindAncestor}}">
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderBrush="White" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="{Binding Path=LowerHeaderBorder}" SnapsToDevicePixels="True">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="{Binding Path=LowerHeaderHorizontalAlignment}" FontWeight="DemiBold" FontSize="11" Margin="7,0,6,0" Text="{Binding Path=LowerHeader}" Foreground="#494949"/>
                                </Border>

                            </Grid>
                        </Border>
                    </DataTemplate>

                    <DataTemplate x:Key="GridColumnHeaderCheckBox" >
                        <Border BorderBrush="LightGray" Background="WhiteSmoke"
                                Height="22" SnapsToDevicePixels="True"
                                Margin="0,0,0,0"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}"
                                BorderThickness="{Binding Path=HeaderBorder}" DataContext="{Binding Path=Content, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader, Mode=FindAncestor}}">
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="White" BorderThickness="{Binding Path=LowerHeaderBorder}" Background="WhiteSmoke" ToolTip="{Binding Path=LowerHeaderToolTip}" Panel.ZIndex="5" SnapsToDevicePixels="True" >
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="{Binding Path=LowerHeaderHorizontalAlignment}" FontWeight="DemiBold" FontSize="11"  Margin="4,0,4,0" Text="{Binding Path=LowerHeader}" Foreground="#494949"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>

                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
   
    <Border Background="White">
        <DockPanel>

            <Border DockPanel.Dock="Bottom" BorderBrush="LightGray" BorderThickness="0,1,0,0" Background="{StaticResource InputHeaderBackgroundRev}" TextBlock.Foreground="{StaticResource InputHeaderForeground}"  SnapsToDevicePixels="True">
                <DockPanel Margin="6">
                    <!-- {lan:Translate Section=Common, Key=Delete, UIDesignerValue='Delete'} -->
                    <Button DockPanel.Dock="Left" Padding="25,3" Margin="0"
                            Style="{StaticResource ResourceKey=btnStandard}"
                            FontSize="14" Content="{lan:Translate Section=Common, Key=Delete,UIDesignerValue='Delete'}" Visibility="{Binding Path=IsEdit, Converter={StaticResource cBoolToVisibility}, ConverterParameter=True}"
                            Command="{Binding Path=DeleteCommand}">
                    </Button>

                    <!-- {lan:Translate Section=Common, Key=Cancel, UIDesignerValue='Cancel'} -->
                    <Button DockPanel.Dock="Right" Padding="25,3" Margin="0"
                            Style="{StaticResource ResourceKey=btnStandard}"
                            FontSize="14" Content="{lan:Translate Section=Common, Key=Cancel, UIDesignerValue='Cancel'}"
                            Command="{Binding Path=CancelCommand}">
                    </Button>

                    <Button DockPanel.Dock="Right" Margin="0,0,6,0" Padding="25,3" 
                            IsEnabled="{Binding Path=IsLoading, Converter={StaticResource cBoolToBoolNegation}}"
                            Style="{StaticResource ResourceKey=btnStandard}"
                            FontSize="14" Content="{lan:Translate Section=Common, Key=Save, UIDesignerValue='Save'}"
                            Command="{Binding Path=SaveCommand}">
                    </Button>

                    <StackPanel />
                </DockPanel>
            </Border>

            <Border DockPanel.Dock="Top" BorderBrush="LightGray" BorderThickness="0,0,0,1" Background="{StaticResource InputHeaderBackgroundRev}" TextBlock.Foreground="{StaticResource InputHeaderForeground}"  SnapsToDevicePixels="True">
                <Grid Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0" >
                        <Image DockPanel.Dock="Left" Margin="2,0,10,0" Height="15" UseLayoutRounding="True" >
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Setter Property="Source" Value="pack://application:,,,/Resources/Images/Common/Add.ico" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsEdit}" Value="True">
                                            <Setter Property="Source" Value="pack://application:,,,/Resources/Images/Common/EditPen.ico" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>

                        <TextBlock Foreground="White" FontSize="16" LineHeight="16" LineStackingStrategy="BlockLineHeight" Text="{Binding Path=HeaderText}" >
                        </TextBlock>
                    </StackPanel>

                </Grid>
            </Border>

            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <DockPanel Margin="20,20,20,60"  HorizontalAlignment="Center" IsEnabled="{Binding Path=IsLoading, Converter={StaticResource cBoolToBoolNegation}}">

                        <!-- Event Id -->
                        <DockPanel DockPanel.Dock="Top" Margin="0,5,0,0" >
                            <Label Content="{lan:Translate Section=AddEditSDEventView, Key=EventId, UIDesignerValue='Event Id'}" DockPanel.Dock="Left" Style="{StaticResource ResourceKey=sViewHeaderStyle}" />
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{Binding Path=EventId}" Style="{StaticResource ResourceKey=sViewHeaderStyle}" Margin="-5,0,0,0" />
                               
                            </StackPanel>
                            <DockPanel.Style>
                                <Style TargetType="{x:Type DockPanel}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=IsEdit}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Style>
                        </DockPanel>

                        <!-- Event type -->
                        <DockPanel DockPanel.Dock="Top" Margin="0,5,0,0"  >
                            <Label Content="{lan:Translate Section=AddEditSDEventView, Key=EventType, UIDesignerValue='Event type'}" DockPanel.Dock="Left" Style="{StaticResource ResourceKey=sViewHeaderStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <aCtrls:FilteredComboBox FilterFromStart="True"
                                             ItemsSource="{Binding Path=EventTypes}"
                                             SelectedItem="{Binding Path=SelectedEventType, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                             DisplayMemberPath="UIDisplay" OpenOnFocus="False" DropDownWidth="300"
                                             MinimumSearchLength="1" IsEditable="True" IsTextSearchCaseSensitive="False"
                                             Style="{StaticResource sViewComboboxStyle}"
                                             />

                                <Grid DockPanel.Dock="Right">
                                    <Button  
                                        Command="{Binding Path=AddEditLookupsCommand}" CommandParameter="L_SDEventType"
                                        Template="{StaticResource ResourceKey=imageButton}" 
                                        Style="{StaticResource ResourceKey=dropDownButton}"
                                        ToolTip="{lan:Translate Section=AddEditSDEventView, Key=AddEditEventTypes, UIDesignerValue='Add/Edit event types'}"
                                        KeyboardNavigation.IsTabStop="False"
                                        >
                                        <Image Margin="5" VerticalAlignment="Center" Source="pack://application:,,,/Resources/Images/Common/EditKeyValues.ico" />
                                    </Button>
                                    <TextBlock Style="{StaticResource txtMandatoryField}" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="1,5,-11,0"  />
                                </Grid>

                            </StackPanel>
                        </DockPanel>

                        <!-- Event name -->
                        <DockPanel Margin="0,5,0,0" DockPanel.Dock="Top" >
                            <Label x:Name="tbEventName" Content="{lan:Translate Section=AddEditSDEventView, Key=EventName, UIDesignerValue='Event name'}"  DockPanel.Dock="Left" Style="{StaticResource ResourceKey=sViewHeaderStyle}" />

                            <Grid HorizontalAlignment="Left">
                                <TextBlock Style="{StaticResource txtMandatoryField}" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="1,5,-10,0"  />
                                <TextBox Text="{Binding Path=EventName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, TargetNullValue=''}" 
                             Style="{StaticResource ResourceKey=sViewTextBoxStyle}" />
                            </Grid>
                            <DockPanel.Style>
                                <Style TargetType="{x:Type DockPanel}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=IsEventNameFieldVisible}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Style>
                        </DockPanel>

                        
                        


                        <!-- Sample type -->
                        <DockPanel DockPanel.Dock="Top" Margin="0,5,0,0"  >
                            <Label Content="{lan:Translate Section=AddEditSDEventView, Key=SampleType, UIDesignerValue='Prøvetagningstype'}" DockPanel.Dock="Left" Style="{StaticResource ResourceKey=sViewHeaderStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <aCtrls:FilteredComboBox FilterFromStart="True"
                                             ItemsSource="{Binding Path=SampleTypes}"
                                             SelectedItem="{Binding Path=SelectedSampleType, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                             DisplayMemberPath="UIDisplay" OpenOnFocus="False" DropDownWidth="{Binding Path=ActualWidth, RelativeSource={RelativeSource Mode=Self}}"
                                             MinimumSearchLength="1" IsEditable="True" IsTextSearchCaseSensitive="False"
                                             Style="{StaticResource sViewComboboxStyle}"
                                             />

                                <Grid DockPanel.Dock="Right">
                                    <Button  
                                        Command="{Binding Path=AddEditLookupsCommand}" CommandParameter="L_SDSampleType"
                                        Template="{StaticResource ResourceKey=imageButton}" 
                                        Style="{StaticResource ResourceKey=dropDownButton}"
                                        ToolTip="{lan:Translate Section=AddEditSDEventView, Key=AddEditSampleTypes, UIDesignerValue='Add/Edit sample types'}"
                                        KeyboardNavigation.IsTabStop="False"
                                        >
                                        <Image Margin="5" VerticalAlignment="Center" Source="pack://application:,,,/Resources/Images/Common/EditKeyValues.ico" />
                                    </Button>
                                    <TextBlock Style="{StaticResource txtMandatoryField}" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="1,5,-11,0"  />
                                </Grid>

                            </StackPanel>
                        </DockPanel>

                        <!-- Year -->
                        <DockPanel DockPanel.Dock="Top" Margin="0,5,0,0"  >
                            <Label Content="{lan:Translate Section=AddEditSDEventView, Key=Year, UIDesignerValue='Year'}" DockPanel.Dock="Left" Style="{StaticResource ResourceKey=sViewHeaderStyle}" ToolTip="{lan:Translate Section=AddEditSDEventView, Key=Year, UIDesignerValue='Year'}" />

                            <Grid HorizontalAlignment="Left">
                                <Border>
                                    <TextBlock Style="{StaticResource txtMandatoryField}" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="1,5,-10,0"  />
                                </Border>
                                
                                <Border>
                                    <TextBox Text="{Binding Path=Year, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, TargetNullValue=''}"
                                         Style="{StaticResource ResourceKey=sViewTextBoxStyle}" 
                                         PreviewTextInput="PreviewTextInputNumbers"
                                         MaxLength="4"/>
                                </Border>
                            </Grid>
                            <DockPanel.Style>
                                <Style TargetType="{x:Type DockPanel}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=IsYearMandatory}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Style>
                        </DockPanel>
                        
                        <!-- Species -->
                        <DockPanel Margin="0,5,0,0" DockPanel.Dock="Top" >
                            <Label Content="{lan:Translate Section=AddEditSDEventView, Key=Species, UIDesignerValue='Species'}" DockPanel.Dock="Left" Style="{StaticResource ResourceKey=sViewHeaderStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <aCtrls:FilteredComboBox FilterFromStart="True"
                                             ItemsSource="{Binding Path=Species}"
                                             SelectedItem="{Binding Path=SelectedSpecies, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                             DisplayMemberPath="UIDisplay" OpenOnFocus="False" DropDownWidth="{Binding Path=ActualWidth, RelativeSource={RelativeSource Mode=Self}}"
                                             MinimumSearchLength="1" IsEditable="True" IsTextSearchCaseSensitive="False"
                                             Style="{StaticResource sViewComboboxStyle}"
                                             />

                                <Grid DockPanel.Dock="Right">
                                    <Button DockPanel.Dock="Right" 
                                            Command="{Binding Path=AddEditLookupsCommand}" CommandParameter="L_Species"
                                            Template="{StaticResource ResourceKey=imageButton}" 
                                            Style="{StaticResource ResourceKey=dropDownButton}"
                                            ToolTip="{lan:Translate Section=AddEditSDEventView, Key=AddEditSpecies, UIDesignerValue='Add/Edit species'}"
                                            KeyboardNavigation.IsTabStop="False"
                                            >
                                        <Image Margin="5" VerticalAlignment="Center" Source="pack://application:,,,/Resources/Images/Common/EditKeyValues.ico" />
                                    </Button>
                                    <TextBlock Style="{StaticResource txtMandatoryField}" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="1,5,-11,0"  />
                                </Grid>
                            </StackPanel>
                        </DockPanel>

                        <!-- DFU Area Single -->
                        <!--<DockPanel Margin="0,5,0,0" DockPanel.Dock="Top" >
                            <Label Content="{lan:Translate Section=SDSampleView, Key=DFUAre, UIDesignerValue='DFU Area'}" DockPanel.Dock="Left" Style="{StaticResource ResourceKey=sViewHeaderStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <aCtrls:FilteredComboBox FilterFromStart="True"
                                             ItemsSource="{Binding Path=Areas}"
                                             SelectedItem="{Binding Path=SelectedArea, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                             DisplayMemberPath="UIDisplay" OpenOnFocus="False" DropDownWidth="{Binding Path=ActualWidth, RelativeSource={RelativeSource Mode=Self}}"
                                             MinimumSearchLength="1" IsEditable="True" IsTextSearchCaseSensitive="False"
                                             Style="{StaticResource sViewComboboxStyle}"
                                             />

                                <Grid DockPanel.Dock="Right">
                                    <Button DockPanel.Dock="Right" 
                                            Command="{Binding Path=AddEditLookupsCommand}" CommandParameter="L_DFUArea"
                                            Template="{StaticResource ResourceKey=imageButton}" 
                                            Style="{StaticResource ResourceKey=dropDownButton}"
                                            ToolTip="{lan:Translate Section=AddEditSDEventView, Key=AddEditArea, UIDesignerValue='Add/Edit DFU Area'}"
                                            KeyboardNavigation.IsTabStop="False"
                                            >
                                        <Image Margin="5" VerticalAlignment="Center" Source="pack://application:,,,/Resources/Images/Common/EditKeyValues.ico" />
                                    </Button>
                                    <TextBlock Style="{StaticResource txtMandatoryField}" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="1,5,-11,0"  />
                                </Grid>
                            </StackPanel>
                        </DockPanel>-->

                        <!-- DFU Area Multi -->
                        <DockPanel Margin="0,8,0,0" DockPanel.Dock="Top" >
                            <Label Content="{lan:Translate Section=SDSampleView, Key=DFUAre, UIDesignerValue='DFU Area'}" DockPanel.Dock="Left" Style="{StaticResource ResourceKey=sViewHeaderStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <aCtrls:DropDownListBox x:Name="mcbxInput" Tag="{Binding}" DockPanel.Dock="Left" Margin="1,0,3,0" Width="250"  BorderBrush="LightGray"  SelectAllText="{lan:Translate Section=Common, Key=SelectAll, UIDesignerValue='Vælg alle'}"  IsSelectAllVisible="True" 
                                                            TextBlock.FontSize="14" ItemsSource="{Binding Path=AreasList, Mode=OneWay}" WaterMark="{lan:Translate Section=Common, Key=SelectOneOrMany, UIDesignerValue='Vælg en eller flere...'}"
                                                            DropDownHeight="300" Height="28"  DropDownWidth="250" AutoCloseOnMouseLeave="True"
                                                            Style="{StaticResource baseInputBoxStyle}">

                                </aCtrls:DropDownListBox>

                                <Grid DockPanel.Dock="Right">
                                    <Button DockPanel.Dock="Right" 
                                            Command="{Binding Path=AddEditLookupsCommand}" CommandParameter="L_DFUArea"
                                            Template="{StaticResource ResourceKey=imageButton}" 
                                            Style="{StaticResource ResourceKey=dropDownButton}"
                                            ToolTip="{lan:Translate Section=AddEditSDEventView, Key=AddEditArea, UIDesignerValue='Add/Edit DFU Area'}"
                                            KeyboardNavigation.IsTabStop="False"
                                            >
                                        <Image Margin="5" VerticalAlignment="Center" Source="pack://application:,,,/Resources/Images/Common/EditKeyValues.ico" />
                                    </Button>
                                    <TextBlock Style="{StaticResource txtMandatoryField}" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="1,5,-11,0" Visibility="{Binding Path=IsAreaMandatory, Converter={StaticResource cBoolToVisibility}, ConverterParameter=True}"  />
                                </Grid>
                            </StackPanel>
                        </DockPanel>


                        <!-- Start time -->
                        <DockPanel DockPanel.Dock="Top" Margin="0,8,0,0" ToolTip="Please select a start date for the event">
                            <Label Content="{lan:Translate Section=AddEditSDEventView, Key=StartDate,UIDesignerValue='Start date'}" DockPanel.Dock="Left"  Style="{StaticResource ResourceKey=sViewHeaderStyle}" />

                            <Grid HorizontalAlignment="Left">
                                <aCtrls:DateTimePickerControl Value="{Binding Path=StartDate, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" 
                                                          Style="{StaticResource sViewDateStyle}" Format="dd-MM-yyyy" Padding="0,0,0,0" IsTimePickerVisible="False"
                                                          ErrorInvalidKey="Ugyldig værdi" 
                                                          ErrorLessThan="Værdien skal være mindre end" 
                                                          ErrorOverstrike="Værdier kan overskrives, ikke slettes"
                                                          HorizontalAlignment="Left" InputStyle="{StaticResource txtValueNoMargin}" ></aCtrls:DateTimePickerControl>
                                
                                <TextBlock Style="{StaticResource txtMandatoryField}" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="1,5,-11,0"  />
                            </Grid>
                            
                        </DockPanel>

                        <!-- End time -->
                        <DockPanel DockPanel.Dock="Top" Margin="0,5,0,0" ToolTip="Please select an end date or the event">
                            <Label Content="{lan:Translate Section=AddEditSDEventView, Key=EndDate,UIDesignerValue='End date'}" DockPanel.Dock="Left"  Style="{StaticResource ResourceKey=sViewHeaderStyle}" />

                            <Grid Margin="-25,0,0,0" DockPanel.Dock="Right">
                                <CheckBox VerticalAlignment="Center" Foreground="Gray" IsChecked="{Binding Path=IsEndDateChecked}" Margin="2,0,0,-1" >
                                    <CheckBox.Style>
                                        <Style TargetType="{x:Type CheckBox}" BasedOn="{StaticResource ResourceKey=sCheckBox2}">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding Path=IsEndDateMandatory}" Value="True" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Hidden" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>

                                <Grid Margin="25,0,0,0" HorizontalAlignment="Left">
                                    <aCtrls:DateTimePickerControl  Value="{Binding Path=EndDate, Mode=TwoWay, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" 
                                                          Style="{StaticResource sViewDateStyle}" Format="dd-MM-yyyy" Padding="0,0,0,0" IsTimePickerVisible="False"
                                                          ErrorInvalidKey="Ugyldig værdi"
                                                          ErrorLessThan="Værdien skal være mindre end " 
                                                          ErrorOverstrike="Værdier kan overskrives, ikke slettes"
                                                          
                                                          
                                                          IsEnabled="{Binding Path=IsEndDateEnabled}"
                                                          InputStyle="{StaticResource txtValueNoMargin}" >

                                    </aCtrls:DateTimePickerControl>
                                    
                                    <TextBlock Style="{StaticResource txtMandatoryField}" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="1,5,-11,0" Visibility="{Binding Path=IsEndDateMandatory, Converter={StaticResource cBoolToVisibility}, ConverterParameter=True}"  />
                                </Grid>
                               
                                
                                
                            </Grid>
                            
                        </DockPanel>

                        <!-- Comment -->
                        <DockPanel DockPanel.Dock="Top" Margin="0,5,0,0"  >
                            <Label Content="{lan:Translate Section=Common, Key=Comments, UIDesignerValue='Comments'}" DockPanel.Dock="Left" Style="{StaticResource ResourceKey=sViewHeaderStyle}" ToolTip="{lan:Translate Section=Common, Key=Comments, UIDesignerValue='Comments'}" VerticalAlignment="Top" />

                            <Grid HorizontalAlignment="Left">

                                <TextBox Text="{Binding Path=EventComments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, TargetNullValue=''}" 
                                     Width="250" Padding="3,2"
                                     Height="50"
                                     AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"
                                     Style="{StaticResource ResourceKey=txtStandard}" />
                            </Grid>
                        </DockPanel>

                        <!-- SmartDots extra columns -->
                        <DockPanel Margin="0,6,0,0" DockPanel.Dock="Top" >
                            <TextBlock Text="{lan:Translate Section=SDSampleView, Key=SDFileExtraColumnHeader, UIDesignerValue='Synlige ekstrakolonner i Files-tabellen i SmartDots'}" 
                                       TextWrapping="Wrap" LineStackingStrategy="BlockLineHeight" LineHeight="17"
                                       DockPanel.Dock="Left" Style="{StaticResource ResourceKey=sViewHeaderTBStyle}" />

                            <StackPanel Orientation="Horizontal">
                                <aCtrls:DropDownListBox Tag="{Binding}" DockPanel.Dock="Left" Margin="1,0,3,0" Width="250"  BorderBrush="LightGray"  SelectAllText="{lan:Translate Section=Common, Key=SelectAll, UIDesignerValue='Vælg alle'}"  IsSelectAllVisible="True" 
                                                        TextBlock.FontSize="14" ItemsSource="{Binding Path=SDFileExtraColumns, Mode=OneWay}" WaterMark="{lan:Translate Section=Common, Key=SelectOneOrMany, UIDesignerValue='Vælg en eller flere...'}"
                                                        DropDownHeight="300" Height="28"  DropDownWidth="250" AutoCloseOnMouseLeave="True"
                                                        Style="{StaticResource baseInputBoxStyle}">

                                </aCtrls:DropDownListBox>

                            </StackPanel>
                        </DockPanel>

                        <!-- Closed -->
                        <DockPanel DockPanel.Dock="Top"  Margin="0,5,0,0" IsEnabled="{Binding Path=HasSecurityRights}" >
                            <Grid >
