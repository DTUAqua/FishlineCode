                                                            <TextBlock Text="{Binding Path=Text, Mode=OneWay}"  />
                                                        </StackPanel>
                                                    </CheckBox>
                                                </Border>
                                            </DataTemplate>
                                        </aCtrls:DropDownListBox.ListBoxItemTemplate>
                                    </aCtrls:DropDownListBox>
                                </Border>
                                <Border Grid.Row="1" Height="1" Background="WhiteSmoke" SnapsToDevicePixels="True">
                                </Border>
                                <Border Grid.Row="2" BorderBrush="WhiteSmoke" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="{Binding Path=LowerHeaderBorder}" SnapsToDevicePixels="True">
