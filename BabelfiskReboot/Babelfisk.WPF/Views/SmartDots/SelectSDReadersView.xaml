                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="5,0,0,0" Text="{lan:Translate Section=SelectSDReadersView, Key=VisibleReaders, UIDesignerValue='Visible images:'}" VerticalAlignment="Center"  />
