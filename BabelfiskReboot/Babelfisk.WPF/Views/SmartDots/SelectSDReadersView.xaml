                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition Height="27" />
                                    <RowDefinition Height="1" />
                                    <RowDefinition Height="28" />
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderBrush="{Binding Path=UpperHeaderBorderBrush}" Margin="-1,0,-1,-1" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="0" SnapsToDevicePixels="True">
                                    <aCtrls:DropDownListBox x:Name="mcbxInput" Tag="{Binding}"  DockPanel.Dock="Left" Margin="0" Background="#FFFDFDFD" BorderBrush="LightGray" BorderThickness="0"  SelectAllText="{lan:Translate Section=Common, Key=SelectAll, UIDesignerValue='Vælg alle'}"  IsSelectAllVisible="True" 
                                                            TextBlock.FontSize="14" ItemsSource="{Binding Path=DataContext.UsedExperiences, Mode=OneWay, ElementName=uc}" AutoCloseOnMouseLeave="True"
                                                            DropDownHeight="300" Height="28"  DropDownWidth="350" Style="{StaticResource FlatStyleDropDownListBox}">
                                        <aCtrls:DropDownListBox.ListBoxItemTemplate>
                                            <DataTemplate>
                                                <Border>
