                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,0,0,0" Text="{lan:Translate Section=SelectSDReadersView, Key=SelectedReaders, UIDesignerValue='Selected readers:'}" VerticalAlignment="Center"  />
