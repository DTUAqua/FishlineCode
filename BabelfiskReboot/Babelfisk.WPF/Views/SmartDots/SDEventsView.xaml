<UserControl x:Class="Babelfisk.WPF.Views.SmartDots.SDEventsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vmSD="clr-namespace:Babelfisk.ViewModels.SmartDots;assembly=Babelfisk.ViewModels"
             xmlns:local="clr-namespace:Babelfisk.WPF.Views.SmartDots"
             xmlns:aCtrls="clr-namespace:Anchor.Core.Controls;assembly=Anchor.Core.Controls"
             xmlns:aBeh="clr-namespace:Anchor.Core.Controls.Behaviors;assembly=Anchor.Core.Controls"
             xmlns:dGrid="clr-namespace:Babelfisk.WPF.Infrastructure.DataGrid"
             xmlns:inf="clr-namespace:Babelfisk.WPF.Infrastructure"
             xmlns:lan="urn:anchorcore-language-localization-ui"
             x:Name="uc"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="1000">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/GeneralStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/HeaderButtons.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/DataGridStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Anchor.Core.Controls;component/Themes/FlatStyleComboBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Anchor.Core.Controls;component/Themes/DropDownListBox.xaml" />

                <ResourceDictionary>

                    <inf:BindingProxy x:Key="proxyContext" Data="{Binding Path=DataContext, ElementName=uc}" />

                    <!-- AddEditSDEventView to be loaded, when the ActiveViewModel on SDEventsViewModel is set to an AddEditSDEventViewModel object instance -->
                    <DataTemplate DataType="{x:Type vmSD:AddEditSDEventViewModel}">
                        <local:AddEditSDEventView ></local:AddEditSDEventView>
                    </DataTemplate>

                    <!-- SDSamplesView to be loaded, when the ActiveViewModel on SDEventsViewModel is set to an SDSamplesViewModel object instance -->
                    <DataTemplate DataType="{x:Type vmSD:SDSamplesViewModel}">
                        <local:SDSamplesView ></local:SDSamplesView>
                    </DataTemplate>

                    <Style x:Key="tvGridCellItem" TargetType="{x:Type TextBlock}">
                        <Setter Property="TextAlignment" Value="Left" />
                        <Setter Property="Margin" Value="6,0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>

                    <!-- Control template for the full row button in the events list -->
                    <ControlTemplate x:Key="itemButton" TargetType="{x:Type Button}">
                        <Border x:Name="btnBorder" BorderBrush="{StaticResource ResourceKey=bdrBrush}" BorderThickness="0,0,0,1" SnapsToDevicePixels="True" CornerRadius="0">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="White" Offset="0.0"/>
                                    <GradientStop Color="White" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <ContentControl x:Name="btnContent" Margin="0,0,0,0" Content="{TemplateBinding Content}" FontWeight="Bold" Foreground="White" >
                            </ContentControl>

                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Button.IsPressed" Value="True">
                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.8">
                                </Setter>
                            </Trigger>
                            <Trigger Property="Button.IsMouseOver" Value="True" >
                                <Setter TargetName="btnBorder" Property="Border.Background" >
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFCF4" Offset="0.0"/>
                                            <GradientStop Color="#FFFCF0E7" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>

                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                    <Style x:Key="CellTextStyle" TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="10" />
                        <Setter Property="Foreground" Value="#3685EA" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>

                    <Style x:Key="cellBorderStyle" TargetType="{x:Type Border}">
                        <Setter Property="BorderBrush" Value="{StaticResource GridBorderBrush}" />
                        <Setter Property="BorderThickness" Value="1,1,1,0" />
                        <Setter Property="MaxHeight" Value="32" />
                        <Setter Property="MinHeight" Value="21" />
                        <Setter Property="Background" Value="White" />
                    </Style>

                    <!-- Template for each row/event in the events list -->
                    <DataTemplate x:Key="eventTemplate">
                        <Grid >
                            <Button x:Name="btnTrip" Margin="0,0,0,0" Grid.Row="0"  
                                    Tag="{Binding ElementName=uc, Path=DataContext}" 
                                    Command="{Binding Path=DataContext.SelectEventCommand, ElementName=uc}" CommandParameter="{Binding .}"
                                    Template="{StaticResource ResourceKey=itemButton}">
                                <Border>
                                    <local:SDEventItem DataContext="{Binding}" Tag="{Binding Path=DataContext, ElementName=uc}" />
                                </Border>
                            </Button>
                        </Grid>
                    </DataTemplate>
                    
                    <!-- Grid header template-->
                    <DataTemplate x:Key="GridColumnHeaderDefault" >
                        <Border BorderBrush="LightGray" 
                                Height="50" Background="LightGray"
                                SnapsToDevicePixels="True"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}"
                                BorderThickness="{Binding Path=HeaderBorder}" DataContext="{Binding Path=Content, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader, Mode=FindAncestor}}">
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="{Binding Path=UpperHeaderBorderBrush}" Margin="0,0,0,-1" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="{Binding Path=UpperHeaderBorderThickness}" SnapsToDevicePixels="True">
                                    <TextBlock Text="{Binding Path=UpperHeader}" Margin="4,0,4,0" VerticalAlignment="Center" Foreground="{Binding Path=UpperHeaderForeground}"  />
                                </Border>

                                <Border Grid.Row="1" Height="1" Background="WhiteSmoke" />

                                <Border Grid.Row="2" BorderBrush="WhiteSmoke" BorderThickness="{Binding Path=LowerHeaderBorder}" Background="WhiteSmoke" ToolTip="{Binding Path=LowerHeaderToolTip}" Panel.ZIndex="5" SnapsToDevicePixels="True" >
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="{Binding Path=LowerHeaderHorizontalAlignment}" FontWeight="DemiBold" Margin="6,0,6,0" Text="{Binding Path=LowerHeader}" Foreground="#494949" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                    
                    <!-- Grid header Locked-->
                    <DataTemplate x:Key="GridColumnHeaderLock" >
                        <Border BorderBrush="LightGray" 
                                Height="50" Background="LightGray"
                                SnapsToDevicePixels="True"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}"
                                BorderThickness="{Binding Path=HeaderBorder}" DataContext="{Binding Path=Content, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader, Mode=FindAncestor}}">
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="{Binding Path=UpperHeaderBorderBrush}" Margin="0,0,0,-1" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="{Binding Path=UpperHeaderBorderThickness}" SnapsToDevicePixels="True">
                                    <TextBlock Text="{Binding Path=UpperHeader}" Margin="4,0,4,0" VerticalAlignment="Center" Foreground="{Binding Path=UpperHeaderForeground}"  />
                                </Border>

                                <Border Grid.Row="1" Height="1" Background="WhiteSmoke" />

                                <Border Grid.Row="2" BorderBrush="WhiteSmoke" BorderThickness="{Binding Path=LowerHeaderBorder}" Background="WhiteSmoke" ToolTip="{Binding Path=LowerHeaderToolTip}" Panel.ZIndex="5" SnapsToDevicePixels="True" >
                                    <Image Source="pack://application:,,,/Resources/Images/Common/Lock.png" Height="15" Margin="0" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <!-- Grid header Event Type-->
                    <DataTemplate x:Key="GridColumnHeaderDropDownEventType" >
                        <Border BorderBrush="LightGray" 
                                Height="50" Background="LightGray"
                                SnapsToDevicePixels="True"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}"
                                BorderThickness="{Binding Path=HeaderBorder}" DataContext="{Binding Path=Content, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader, Mode=FindAncestor}}">
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="{Binding Path=UpperHeaderBorderBrush}" Margin="-1" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="{Binding Path=UpperHeaderBorderThickness}" SnapsToDevicePixels="True">
                                    <aCtrls:DropDownListBox x:Name="mcbxInput" Tag="{Binding}"  DockPanel.Dock="Left" Margin="0" Background="#FFFDFDFD" BorderBrush="LightGray" BorderThickness="0"  SelectAllText="{lan:Translate Section=Common, Key=SelectAll, UIDesignerValue='Vælg alle'}"  IsSelectAllVisible="True" 
                                                            TextBlock.FontSize="14" ItemsSource="{Binding Path=DataContext.UsedEventTypes, Mode=OneWay, ElementName=uc}" 
                                                            AutoCloseOnMouseLeave="True"
                                                            DropDownHeight="300" Height="26"  DropDownWidth="300" Style="{StaticResource FlatStyleDropDownListBox}">
                                        <aCtrls:DropDownListBox.ListBoxItemTemplate>
                                            <DataTemplate>
                                                <Border>
                                                    <CheckBox Margin="4,2,4,2" IsHitTestVisible="False" VerticalAlignment="Center" VerticalContentAlignment="Center"  
                                                                          IsChecked="{Binding Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" KeyboardNavigation.IsTabStop="False" KeyboardNavigation.TabNavigation="None" >
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Path=Text, Mode=OneWay}"  />
                                                        </StackPanel>
                                                    </CheckBox>
                                                </Border>
                                            </DataTemplate>
                                        </aCtrls:DropDownListBox.ListBoxItemTemplate>
                                    </aCtrls:DropDownListBox>
                                </Border>

                                <Border Grid.Row="1" Height="1" Background="WhiteSmoke" />

                                <Border Grid.Row="2" BorderBrush="WhiteSmoke" BorderThickness="{Binding Path=LowerHeaderBorder}" Background="WhiteSmoke" ToolTip="{Binding Path=LowerHeaderToolTip}" Panel.ZIndex="5" SnapsToDevicePixels="True" >
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="{Binding Path=LowerHeaderHorizontalAlignment}" FontWeight="DemiBold" Margin="6,0,6,0" Text="{Binding Path=LowerHeader}" Foreground="#494949" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <!-- Grid header Year-->
                    <DataTemplate x:Key="GridColumnHeaderDropDownYear" >
                        <Border BorderBrush="LightGray" 
                                Height="50" Background="LightGray"
                                SnapsToDevicePixels="True"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}"
                                BorderThickness="{Binding Path=HeaderBorder}" DataContext="{Binding Path=Content, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader, Mode=FindAncestor}}">
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="{Binding Path=UpperHeaderBorderBrush}" Margin="-1" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="{Binding Path=UpperHeaderBorderThickness}" SnapsToDevicePixels="True">
                                    <aCtrls:DropDownListBox x:Name="mcbxInput" Tag="{Binding}"  DockPanel.Dock="Left" Margin="0" Background="#FFFDFDFD" BorderBrush="LightGray" BorderThickness="0"  SelectAllText="{lan:Translate Section=Common, Key=SelectAll, UIDesignerValue='Vælg alle'}"  IsSelectAllVisible="True" 
                                                            TextBlock.FontSize="14" ItemsSource="{Binding Path=DataContext.UsedYears, Mode=OneWay, ElementName=uc}" AutoCloseOnMouseLeave="True"
                                                            DropDownHeight="300" Height="26"  DropDownWidth="150" Style="{StaticResource FlatStyleDropDownListBox}">
                                        <aCtrls:DropDownListBox.ListBoxItemTemplate>
                                            <DataTemplate>
                                                <Border>
                                                    <CheckBox Margin="4,2,4,2" IsHitTestVisible="False" VerticalAlignment="Center" VerticalContentAlignment="Center"  
                                                                          IsChecked="{Binding Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" KeyboardNavigation.IsTabStop="False" KeyboardNavigation.TabNavigation="None" >
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Path=Text, Mode=OneWay}"  />
                                                        </StackPanel>
                                                    </CheckBox>
                                                </Border>
                                            </DataTemplate>
                                        </aCtrls:DropDownListBox.ListBoxItemTemplate>
                                    </aCtrls:DropDownListBox>
                                </Border>

                                <Border Grid.Row="1" Height="1" Background="WhiteSmoke" />

                                <Border Grid.Row="2" BorderBrush="WhiteSmoke" BorderThickness="{Binding Path=LowerHeaderBorder}" Background="WhiteSmoke" ToolTip="{Binding Path=LowerHeaderToolTip}" Panel.ZIndex="5" SnapsToDevicePixels="True" >
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="{Binding Path=LowerHeaderHorizontalAlignment}" FontWeight="DemiBold" Margin="6,0,6,0" Text="{Binding Path=LowerHeader}" Foreground="#494949" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <!-- Grid header Species-->
                    <DataTemplate x:Key="GridColumnHeaderDropDownSpecies" >
                        <Border BorderBrush="LightGray" 
                                Height="50" Background="LightGray"
                                SnapsToDevicePixels="True"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}"
                                BorderThickness="{Binding Path=HeaderBorder}" DataContext="{Binding Path=Content, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader, Mode=FindAncestor}}">
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="{Binding Path=UpperHeaderBorderBrush}" Margin="-1" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="{Binding Path=UpperHeaderBorderThickness}" SnapsToDevicePixels="True">
                                    <aCtrls:DropDownListBox x:Name="mcbxInput" Tag="{Binding}"  DockPanel.Dock="Left" Margin="0" Background="#FFFDFDFD" BorderBrush="LightGray" BorderThickness="0"  SelectAllText="{lan:Translate Section=Common, Key=SelectAll, UIDesignerValue='Vælg alle'}"  IsSelectAllVisible="True" 
                                                            TextBlock.FontSize="14" ItemsSource="{Binding Path=DataContext.UsedSpecies, Mode=OneWay, ElementName=uc}" AutoCloseOnMouseLeave="True"
                                                            DropDownHeight="300" Height="26"  DropDownWidth="150" Style="{StaticResource FlatStyleDropDownListBox}">
                                        <aCtrls:DropDownListBox.ListBoxItemTemplate>
                                            <DataTemplate>
                                                <Border>
                                                    <CheckBox Margin="4,2,4,2" IsHitTestVisible="False" VerticalAlignment="Center" VerticalContentAlignment="Center"  
                                                                          IsChecked="{Binding Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" KeyboardNavigation.IsTabStop="False" KeyboardNavigation.TabNavigation="None" >
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Path=Text, Mode=OneWay}"  />
                                                        </StackPanel>
                                                    </CheckBox>
                                                </Border>
                                            </DataTemplate>
                                        </aCtrls:DropDownListBox.ListBoxItemTemplate>
                                    </aCtrls:DropDownListBox>
                                </Border>

                                <Border Grid.Row="1" Height="1" Background="WhiteSmoke" />

                                <Border Grid.Row="2" BorderBrush="WhiteSmoke" BorderThickness="{Binding Path=LowerHeaderBorder}" Background="WhiteSmoke" ToolTip="{Binding Path=LowerHeaderToolTip}" Panel.ZIndex="5" SnapsToDevicePixels="True" >
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="{Binding Path=LowerHeaderHorizontalAlignment}" FontWeight="DemiBold" Margin="6,0,6,0" Text="{Binding Path=LowerHeader}" Foreground="#494949" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <!-- Grid header Area-->
                    <DataTemplate x:Key="GridColumnHeaderDropDownArea" >
                        <Border BorderBrush="LightGray" 
                                Height="50" Background="LightGray"
                                SnapsToDevicePixels="True"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}"
                                BorderThickness="{Binding Path=HeaderBorder}" DataContext="{Binding Path=Content, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader, Mode=FindAncestor}}">
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="{Binding Path=UpperHeaderBorderBrush}" Margin="-1" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="{Binding Path=UpperHeaderBorderThickness}" SnapsToDevicePixels="True">
                                    <aCtrls:DropDownListBox x:Name="mcbxInput" Tag="{Binding}"  DockPanel.Dock="Left" Margin="0" Background="#FFFDFDFD" BorderBrush="LightGray" BorderThickness="0"  SelectAllText="{lan:Translate Section=Common, Key=SelectAll, UIDesignerValue='Vælg alle'}"  IsSelectAllVisible="True" 
                                                            TextBlock.FontSize="14" ItemsSource="{Binding Path=DataContext.UsedAreas, Mode=OneWay, ElementName=uc}" AutoCloseOnMouseLeave="True"
                                                            DropDownHeight="300" Height="26"  DropDownWidth="150" Style="{StaticResource FlatStyleDropDownListBox}">
                                        <aCtrls:DropDownListBox.ListBoxItemTemplate>
                                            <DataTemplate>
                                                <Border>
                                                    <CheckBox Margin="4,2,4,2" IsHitTestVisible="False" VerticalAlignment="Center" VerticalContentAlignment="Center"  
                                                                          IsChecked="{Binding Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" KeyboardNavigation.IsTabStop="False" KeyboardNavigation.TabNavigation="None" >
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Path=Text, Mode=OneWay}"  />
                                                        </StackPanel>
                                                    </CheckBox>
                                                </Border>
                                            </DataTemplate>
                                        </aCtrls:DropDownListBox.ListBoxItemTemplate>
                                    </aCtrls:DropDownListBox>
                                </Border>

                                <Border Grid.Row="1" Height="1" Background="WhiteSmoke" />

                                <Border Grid.Row="2" BorderBrush="WhiteSmoke" BorderThickness="{Binding Path=LowerHeaderBorder}" Background="WhiteSmoke" ToolTip="{Binding Path=LowerHeaderToolTip}" Panel.ZIndex="5" SnapsToDevicePixels="True" >
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="{Binding Path=LowerHeaderHorizontalAlignment}" FontWeight="DemiBold" Margin="6,0,6,0" Text="{Binding Path=LowerHeader}" Foreground="#494949" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <!-- Grid header Users-->
                    <DataTemplate x:Key="GridColumnHeaderUSers" >
                        <Border BorderBrush="LightGray" 
                                Height="50" Background="LightGray"
                                SnapsToDevicePixels="True"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}"
                                BorderThickness="{Binding Path=HeaderBorder}" DataContext="{Binding Path=Content, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader, Mode=FindAncestor}}">
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="{Binding Path=UpperHeaderBorderBrush}" Margin="0,0,0,-1" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="{Binding Path=UpperHeaderBorderThickness}" SnapsToDevicePixels="True">
                                    <TextBlock Text="{Binding Path=UpperHeader}" Margin="4,0,4,0" VerticalAlignment="Center" Foreground="{Binding Path=UpperHeaderForeground}"  />
                                </Border>

                                <Border Grid.Row="1" Height="1" Background="WhiteSmoke" />

                                <Border Grid.Row="2" BorderBrush="WhiteSmoke" BorderThickness="{Binding Path=LowerHeaderBorder}" Background="WhiteSmoke" ToolTip="{Binding Path=LowerHeaderToolTip}" Panel.ZIndex="5" SnapsToDevicePixels="True" >
                                    <Image Source="pack://application:,,,/Resources/Images/Security/Users.ico" Height="15" Margin="0" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <!-- Grid header Users-->
                    <DataTemplate x:Key="GridColumnHeaderSamples" >
                        <Border BorderBrush="LightGray" 
                                Height="50" Background="LightGray"
                                SnapsToDevicePixels="True"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=DataGridColumnHeader}, Path=ActualWidth}"
                                BorderThickness="{Binding Path=HeaderBorder}" DataContext="{Binding Path=Content, RelativeSource={RelativeSource AncestorType=DataGridColumnHeader, Mode=FindAncestor}}">
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="{Binding Path=UpperHeaderBorderBrush}" Margin="0,0,0,-1" Panel.ZIndex="10" Background="WhiteSmoke" BorderThickness="{Binding Path=UpperHeaderBorderThickness}" SnapsToDevicePixels="True">
                                    <TextBlock Text="{Binding Path=UpperHeader}" Margin="4,0,4,0" VerticalAlignment="Center" Foreground="{Binding Path=UpperHeaderForeground}"  />
                                </Border>

                                <Border Grid.Row="1" Height="1" Background="WhiteSmoke" />

                                <Border Grid.Row="2" BorderBrush="WhiteSmoke" BorderThickness="{Binding Path=LowerHeaderBorder}" Background="WhiteSmoke" ToolTip="{Binding Path=LowerHeaderToolTip}" Panel.ZIndex="5" SnapsToDevicePixels="True" >
                                    <Image Source="pack://application:,,,/Resources/Images/Common/FishRaw.ico" Height="15" Margin="0" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <!-- Button used on the black background (for Add event for example) -->
                    <Style x:Key="panelButton" TargetType="{x:Type Button}">
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="BorderBrush" Value="#6A6969" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="bdr" SnapsToDevicePixels="True" Background="#99454942" KeyboardNavigation.IsTabStop="False" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" >
                                        <Grid Margin="{TemplateBinding Padding}" x:Name="btnGrid" KeyboardNavigation.IsTabStop="False" >
                                            <ContentControl x:Name="content" KeyboardNavigation.IsTabStop="False" Content="{TemplateBinding Content}" Foreground="White" >
                                            </ContentControl>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="Button.IsEnabled" Value="False">
                                            <Setter TargetName="bdr" Property="Opacity" Value="0.4" />
                                        </Trigger>
                                        <Trigger Property="Button.IsMouseOver" Value="True">
                                            <Setter TargetName="bdr" Property="Opacity" Value="0.8" />
                                        </Trigger>
                                        <Trigger Property="Button.IsPressed" Value="True">
                                            <Setter TargetName="bdr" Property="Opacity" Value="0.5" ></Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>

                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="White">
        <Grid>
            <!-- ContentControl for the ActiveViewModel property. When a viewmodel is assigned to the ActiveViewModel property the proper view is loaded to the content control based on the DataTemplates defined in the resources section above. -->
            <ContentControl Grid.Column="0" Panel.ZIndex="1" KeyboardNavigation.IsTabStop="False"
                        Content="{Binding Path=ActiveViewModel}" Visibility="{Binding Path=HasActiveViewModel, Converter={StaticResource cBoolToVisibility}, ConverterParameter=True}" >
            </ContentControl>

            <DockPanel Visibility="{Binding Path=HasActiveViewModel, Converter={StaticResource cBoolToVisibility}, ConverterParameter=False}">

                <!-- Left bar -->
                <Border DockPanel.Dock="Left" Background="{StaticResource InputHeaderBackgroundRev}" >
                    <StackPanel Orientation="Vertical">
                        <Border BorderBrush="#4F4C4C" BorderThickness="0,0,0,0" SnapsToDevicePixels="True">
                            <TextBlock Text="{lan:Translate Section=SDEventsView, Key=Events, UIDesignerValue='Events'}" TextAlignment="Center" FontSize="16" Margin="5,5,5,5" Foreground="White" />
                        </Border>

                        <Border BorderBrush="{StaticResource GridBorderBrush}" Visibility="Collapsed" Margin="5,0" BorderThickness="0,1,0,0"></Border>

                        <Border Padding="10,5" >
                            <Button Style="{StaticResource panelButton}" Padding="5,5" Command="{Binding Path=AddEventCommand}" >
                                <DockPanel>
                                    <Image DockPanel.Dock="Left" Margin="0,0,5,0" Height="12" UseLayoutRounding="True" Source="pack://application:,,,/Resources/Images/Common/Add.ico" ></Image>
                                    <TextBlock Text="{lan:Translate Section=SDEventsView, Key=AddEvent, UIDesignerValue='Add event'}" Margin="3,0,6,0" Foreground="White" />
                                </DockPanel>
                            </Button>
                        </Border>

                        <Border Padding="10,5" Visibility="Collapsed" >
                            <Button Style="{StaticResource panelButton}" Padding="5,5" Command="{Binding Path=TestCommand}" >
                                <DockPanel>
                                    <Image DockPanel.Dock="Left" Margin="0,0,5,-2" Height="12" UseLayoutRounding="True" Source="pack://application:,,,/Resources/Images/Common/Link.ico" ></Image>
                                    <TextBlock Text="Test" Margin="3,0,6,0" Foreground="White" />
                                </DockPanel>
                            </Button>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Top bar -->
